# Shopify Tracking App - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
SUPABASE_URL=https://YOUR-PROJECT.supabase.co
# Use SERVICE_ROLE on server only (never expose to client)
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY
# (Optional fallback)
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# ===========================================
# REDIS CONFIGURATION (choose ONE option)
# ===========================================
# Option 1: Standard Redis (ioredis)
# REDIS_URL=rediss://default:YOUR_REDIS_PASSWORD@YOUR-REDIS-HOST:6379

# Option 2: Upstash Redis REST
# UPSTASH_REDIS_REST_URL=https://YOUR-UPSTASH-URL.upstash.io
# UPSTASH_REDIS_REST_TOKEN=YOUR_UPSTASH_TOKEN

# ===========================================
# APP / TRACKING
# ===========================================
# Public base URL where this app is reachable (used by tracker.js)
PUBLIC_BASE_URL=https://your-app-domain.example.com
# Default shop domain for dashboard fallbacks
SHOP_DOMAIN=ecomxtrade.myshopify.com
# Tracking API authentication key (used by /cleanup, optional for /app-proxy/collect)
TRACKING_KEY=CHANGE_ME_TO_A_LONG_RANDOM_STRING

# ===========================================
# FEATURES (OPTIONAL)
# ===========================================
# Enable Supabase Realtime subscriptions (0 or 1)
REALTIME=0

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=8082
NODE_ENV=production
